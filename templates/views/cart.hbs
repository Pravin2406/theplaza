<script>
  function changeQty(cartid)
  {
    var qty = document.getElementById(cartid).value;
    $.get("changeQty", {cartid, qty}, function(rt) {
      location.reload()
    })
  }
</script>

  </head>
  <body>
    <!-- Page Preloder -->
    <div id="preloder">
      <div class="loader"></div>
    </div>

    <!-- Header section -->
    {{>userheader}}
    <!-- Header section end -->

    <!-- Page Info -->
    <div class="page-info-section page-info" style="background-color: rgb(207, 130, 243);">
      <div class="container">
        <div class="site-breadcrumb">
          {{!-- <a href="">Home</a>/<a href="">Sales</a>/<a href="">Bags</a>/ --}}
          {{!-- <span>Cart</span> --}}
          <h3 style="margin-top: 50px; text-align: center;">Product Cart</h3>
        </div>
        <img src="" alt="" class="page-info-art" />
      </div>
    </div>
    <!-- Page Info end -->

    <!-- Page -->
    <div class="page-area cart-page spad">
      <div class="container">
        <div class="cart-table">
          <table>
            <thead>
              <tr>
                <th class="product-th">Product</th>
                <th>Price</th>
                <th>Quantity</th>
                <th class="total-th">Total</th>
                <th class="total-th" style="text-align: center;">Remove</th>
              </tr>
            </thead>
            <tbody>
              {{#each cartdata}}
              <tr>
                {{#each this.product}}
                <td class="product-col">
                  <img src="productimg/{{this.img}}" alt="" height="40px" width="40px"/>
                  <div class="pc-title">
                    {{#if this.qty}}
                      <h4>{{this.pname}}</h4>
                    {{else}}
                      <h4>{{this.pname}} (SOLD OUT)</h4>
                    {{/if}}
                    <a href="#"></a>
                  </div>
                </td>
                {{/each}}
                <td class="price-col">₹ {{this.price}}</td>
                <td class="quy-col">
                  <div class="quy-input">
                    <span>Qty</span>
                    <input type="number" min="1" id={{this._id}} onchange="changeQty('{{this._id}}')" 
                    value="{{this.qty}}" />
                  </div>
                </td>
                <td class="total-col">₹ {{this.total}}</td>
                <td class="align-middle" align="center"><button class="btn btn-sm btn-primary">
                  <a href="remove_cart?cid={{this._id}}" style="color: white;"> X </a></button></td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
        <div class="row cart-buttons">
          <div class="col-lg-11 col-md-10 text-lg-right text-left">
            <div class="site-btn btn-continue"><a href="/" style="color: rgb(10, 10, 10);">Continue shooping</a></div>
          </div>
          {{!-- <div class="col-lg-7 col-md-7 text-lg-right text-left">
            <div class="site-btn btn-clear">Clear cart</div>
            <div class="site-btn btn-line btn-update">Update Cart</div>
          </div> --}}
        </div>
      </div>
      <div class="card-warp">
        <div class="container">
          <div class="row">
            <div class="col-lg-4">
              <div class="shipping-info">
                <h4>Shipping method</h4>
                <p>Select the one you want</p>
                <div class="shipping-chooes">
                  <div class="sc-item">
                    <input type="radio" name="sc" id="one" />
                    <label for="one">Next day delivery<span>Free</span></label>
                  </div>
                  <div class="sc-item">
                    <input type="radio" name="sc" id="two" />
                    <label for="two">Standard delivery<span>Free</span></label>
                  </div>
                  <div class="sc-item">
                    <input type="radio" name="sc" id="three" />
                    <label for="three">Personal Pickup<span>Free</span></label>
                  </div>
                </div>
                <h4>Cupon code</h4>
                <p>Enter your cupone code</p>
                <div class="cupon-input">
                  <input type="text" />
                  <button class="site-btn">Apply</button>
                </div>
              </div>
            </div>
            <div class="offset-lg-2 col-lg-6">
              <div class="cart-total-details">
                <h4>Cart total</h4>
                <p>Final Info</p>
                <ul class="cart-total-card">
                  <li>Subtotal<span>₹ {{sum}}</span></li>
                  <li>Shipping<span>₹ 0</span></li>
                  <li class="total">Total<span>₹<span id="amt">{{sum}}</span></span></li>
                </ul>
                <a class="site-btn btn-full" id="rzp-button1">Proceed to checkout</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
